<Window x:Class="Names.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Macro Recorder" 
        Height="500"
        Width="682"
        Background="Black"
        SizeChanged="Window_SizeChanged">

    <Window.Resources>
        <LinearGradientBrush x:Key="BackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#000000" Offset="0.0"/>
            <GradientStop Color="#1A0000" Offset="1.0"/>
        </LinearGradientBrush>

        <Style x:Key="AppButton" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF0000"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <!-- Console output -->
        <TextBox 
            x:Name="consoleBox"
            Margin="439,10,10,10"
            FontSize="14"
            IsReadOnly="True"
            Background="#222222"
            Foreground="#FF0000"
            BorderBrush="#FF0000"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"
            Text="{Binding ConsoleText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Control buttons -->
        <StackPanel
            Orientation="Horizontal"
            Margin="10,10,254,416">
            <Button x:Name="recordButton"
                   Style="{StaticResource AppButton}"
                   Width="55" 
                   Height="30" 
                   Background="Red" 
                   Foreground="White" 
                   Click="RecordButton_Click" 
                   Content="Record"/>
            <Button x:Name="stopButton" 
                   Style="{StaticResource AppButton}"
                   Width="55" 
                   Height="30" 
                   Margin="5,0,0,0" 
                   IsEnabled="False" 
                   Click="StopButton_Click" 
                   Content="Stop"/>
            <Button x:Name="saveButton"
                   Style="{StaticResource AppButton}"
                   Width="55"
                   Height="30"
                   Margin="10,0,5,0"
                   Background="Black"
                   Foreground="#FF0000"
                   BorderBrush="#FF0000"
                   Click="SaveButton_Click" 
                   Content="Save"/>
            <Button x:Name="loadButton"
                   Style="{StaticResource AppButton}"
                   Width="55"
                   Height="30"
                   Margin="5,0,0,0"
                   Background="Black"
                   Foreground="#FF0000"
                   BorderBrush="#FF0000"
                   Click="LoadButton_Click" 
                   Content="Load"/>
            <Button x:Name="clearButton"
                   Style="{StaticResource AppButton}"
                   Width="55"
                   Height="30"
                   Margin="5,0,0,0"
                   Background="Black"
                   Foreground="#FF0000"
                   BorderBrush="#FF0000"
                   Click="Clear_PreviewKeyDown" 
                   Content="Clear"/>
        </StackPanel>

        <!-- Macro commands container -->
        <ScrollViewer Margin="10,60,254,10" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="textBoxContainer">
                <!-- TextBoxes will be added here programmatically -->
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>