<Window 
    x:Class="Names.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Macro Recorder" 
    Height="500"
    Width="682"
    Background="Black"
    SizeChanged="Window_SizeChanged"
    WindowStyle="None"
    AllowsTransparency="True"
    BorderThickness="1"
    BorderBrush="#FF333333"
    ResizeMode="CanResizeWithGrip">

    <Window.Template>
        <ControlTemplate TargetType="{x:Type Window}">
            <Border BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}">
                <Grid>
                    <!-- Title bar -->
                    <Grid Height="30" VerticalAlignment="Top" Background="#FF222222">
                        <TextBlock Text="{TemplateBinding Title}" 
                                  Foreground="#FFFF0000" 
                                  VerticalAlignment="Center" 
                                  Margin="10,0,0,0" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="MinimizeButton" Content="—" Width="30" Foreground="White"
                                    Background="Transparent" BorderThickness="0"
                                    Click="MinimizeButton_Click"/>
                            <Button x:Name="MaximizeButton" Content="□" Width="30" Foreground="White"
                                    Background="Transparent" BorderThickness="0"
                                    Click="MaximizeButton_Click"/>
                            <Button x:Name="CloseButton" Content="✕" Width="30" Foreground="White"
                                    Background="Transparent" BorderThickness="0"
                                    Click="CloseButton_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- Main content -->
                    <Border Margin="0,30,0,0">
                        <AdornerDecorator>
                            <ContentPresenter/>
                        </AdornerDecorator>
                    </Border>

                    <!-- Resize grip -->
                    <ResizeGrip x:Name="WindowResizeGrip" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Bottom" 
                                Visibility="Visible" 
                                IsTabStop="False"/>
                </Grid>
            </Border>
        </ControlTemplate>
    </Window.Template>

    <Window.Resources>
        <LinearGradientBrush x:Key="BackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#000000" Offset="0.0"/>
            <GradientStop Color="#1A0000" Offset="1.0"/>
        </LinearGradientBrush>

        <Style x:Key="AppButton" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF0000"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Action buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Settings and options -->
            <RowDefinition Height="*"/>
            <!-- Macro commands (scrollable area) -->
        </Grid.RowDefinitions>

        <!-- Content frame for pages -->
        <Frame x:Name="contentFrame" 
           Grid.RowSpan="3"
           NavigationUIVisibility="Hidden"
           Visibility="Collapsed"
           HorizontalAlignment="Stretch"
           VerticalAlignment="Stretch"/>


        <!-- Main content panel -->
        <Grid x:Name="mainContent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Action buttons -->
                <RowDefinition Height="Auto"/>
                <!-- Settings and options -->
                <RowDefinition Height="*"/>
                <!-- Macro commands (scrollable area) -->
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                <Button x:Name="recordButton"
                Style="{StaticResource AppButton}"
                Width="55" 
                Height="30" 
                Background="Red" 
                Foreground="White" 
                Click="RecordButton_Click" 
                Content="Record"/>
            <Button x:Name="stopButton" 
                Style="{StaticResource AppButton}"
                Width="55" 
                Height="30" 
                Margin="5,0,0,0" 
                IsEnabled="False" 
                Click="StopButton_Click" 
                Content="Stop"/>
            <Button x:Name="saveButton"
                Style="{StaticResource AppButton}"
                Width="55"
                Height="30"
                Margin="10,0,5,0"
                Background="Black"
                Foreground="#FF0000"
                BorderBrush="#FF0000"
                Click="SaveButton_Click" 
                Content="Save"/>
            <Button x:Name="loadButton"
                Style="{StaticResource AppButton}"
                Width="55"
                Height="30"
                Margin="5,0,0,0"
                Background="Black"
                Foreground="#FF0000"
                BorderBrush="#FF0000"
                Click="LoadButton_Click" 
                Content="Load"/>
            <Button x:Name="clearButton"
                Style="{StaticResource AppButton}"
                Width="55"
                Height="30"
                Margin="5,0,0,0"
                Background="Black"
                Foreground="#FF0000"
                BorderBrush="#FF0000"
                Click="ClearButton_Click" 
                Content="Clear"/>
            <Button x:Name="playButton"
               Style="{StaticResource AppButton}"
               Width="55"
               Height="30"
               Margin="5,0,0,0"
               Background="Green"
               Foreground="White"
               BorderBrush="#FF00FF00"
               Click="PlayButton_Click" 
               Content="Play"/>
            <Button x:Name="stopMacroButton"
                Content="Stop" 
                Width="55" 
                Height="30" 
                Margin="5,0,0,0"
                Background="Red"
                Foreground="White"
                Click="StopMacro_Click"
                Style="{StaticResource AppButton}"/>
            <Button x:Name="settingsButton"
                Content="Settings" 
                Width="70" 
                Height="30" 
                Margin="5,0,0,0"
                Click="OpenSettings_Click"
                Style="{StaticResource AppButton}"/>
                <Button x:Name="consoleButton"
                Content="Console" 
                Width="70" 
                Height="30" 
                Margin="5,0,0,0"
                Click="OpenConsoleWindow_Click"
                Style="{StaticResource AppButton}"/>
            </StackPanel>

        <!-- Second row with trigger and loop controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,5">
            <TextBox x:Name="triggerKeyTextBox"
             Width="80"
             Height="30"
             Text="{Binding TriggerKey, Mode=TwoWay}"
             IsReadOnly="True"
             Background="#222222"
             Foreground="#FF0000"
             BorderBrush="#FF0000"
             VerticalContentAlignment="Center"
             HorizontalContentAlignment="Center"/>

                <Button x:Name="recordTriggerButton"
            Content="Set Key" 
            Width="60" 
            Height="30" 
            Margin="5,0,0,0"
            Click="RecordTrigger_Click"
            Style="{StaticResource AppButton}"/>

                <TextBlock Text="Loops:" VerticalAlignment="Center" Foreground="#FF0000" Margin="10,0,5,0"/>
                <TextBox x:Name="loopCountTextBox" 
             Width="40" 
             Height="30"
             Text="{Binding LoopCount, UpdateSourceTrigger=PropertyChanged}"
             Background="#222222"
             Foreground="#FF0000"
             BorderBrush="#FF0000"
             TextAlignment="Center"
             VerticalContentAlignment="Center"/>
                <Button x:Name="decrementButton" 
            Content="-" 
            Width="30" 
            Height="30" 
            Margin="2,0,0,0"
            Click="DecrementLoop_Click"
            Style="{StaticResource AppButton}"/>
                <Button x:Name="incrementButton" 
            Content="+" 
            Width="30" 
            Height="30" 
            Margin="2,0,0,0"
            Click="IncrementLoop_Click"
            Style="{StaticResource AppButton}"/>
            </StackPanel>

                <!-- Macro commands container -->
        <ScrollViewer Grid.Row="2" Margin="10" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="textBoxContainer">
                <!-- TextBoxes will be added here programmatically -->
            </WrapPanel>
        </ScrollViewer>
        </Grid>
    </Grid>
</Window>